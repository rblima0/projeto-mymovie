html
  height 100%

#root
  min-height 100%
  height 100%

html
body
  -webkit-font-smoothing antialiased

body
  min-height 100%
  display flex
  flex-flow column nowrap
  align-items stretch
  overflow auto
  padding 0
  margin 0

body
input
textarea
keygen
select
button
  font-family Roboto, Arial, sans-serif
  font-size 1.2rem

  &:focus
    outline 0

:focus
  outline 0

h1
h2
h3
h4
h5
h6
  margin 0

code
  font-family source-code-pro, Menlo, Monaco, Consolas, 'Courier New', monospace;
